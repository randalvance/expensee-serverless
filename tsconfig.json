{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "app/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
